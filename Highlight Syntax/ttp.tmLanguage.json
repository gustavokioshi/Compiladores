{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "TPP",
    "patterns": [
        {"include": "#comments"},
        {"include": "#operators"},
        {"include": "#numbers"},
        {"include": "#functions"},
        {"include": "#statements"},
        {"include": "#reserved-words"}
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.character.tpp",
                    "begin": "{",
                    "end": "}"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    
                    "name": "keyword.operator.assignment.compound.tpp",
                    "match": "<>|<=|>=|<|>|= | \\+ | \\- | \\/ | \\*| &&| \\|\\| "
                },
                {
                    "name": "keyword.operator.symbols.tpp",
                    "match": ":=|:|,"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.integer.tpp",
                    "match": "\\d+"
                },
                {
                    "name": "constant.numeric.float.tpp",
                    "match": "\\b(\\d+ \\. \\d+)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.member.tpp",
                    "match": "\\b(escreva|leia|fim|retorna)\\b"
                } 
            ]
        },
        "statements": {
            "patterns": [
                {
                    "name": "keyword.control.tpp",
                    "match": "\\b(se|então|senão|repita|até)\\b"
                }
            ]
        },
        "reserved-words": {
            "patterns": [
                {
                    "name": "entity.name.function.ttp",
                    "match": "\\b(se|então|senão|repita|até|inteiro|flutuante|retorna|fim|leia|escreva)\\b"
                }
            ]
        }
    },
    "scopeName": "source.tpp"
}